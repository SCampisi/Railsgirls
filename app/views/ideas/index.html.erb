<h1>Listing ideas</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Picture</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @ideas.each do |idea| %>
      <tr>
        <td><%= idea.name %></td>
        <td><%= idea.description %></td>
        <td><%= idea.picture %></td>
        <td><%= link_to 'Show', idea %></td>
		<td><%= link_to 'Edit', edit_idea_path(idea) %></td>
        <td><button type="button" class="btn btn-default btn-lg">
		<span class="glyphicon glyphicon-trash"></span>
		<%= link_to 'Delete', idea, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="btn-group">
 <button type="button" class="btn btn-default"><%= link_to 'New Idea', new_idea_path %></button>
 </div>
